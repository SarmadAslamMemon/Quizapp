<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_signup"
    tools:context=".age_choose"
    android:layout_gravity="center"
    android:orientation="vertical">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/ageanimation1"
      />
    <Button
        android:layout_width="279dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:backgroundTint="#FFC107"
        android:cursorVisible="true"
        android:text="Kids"
        android:textColor="#05554E"
        android:textSize="25dp"
        android:textStyle="bold"
        app:rippleColor="#072525"
        app:strokeColor="@color/black" />

    <Button
        android:layout_width="279dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:backgroundTint="#FFC107"
        android:text="Teenagers"
        android:textColor="#05554E"
        android:textSize="25dp"
        android:textStyle="bold"
        app:rippleColor="#072525" />

    <Button
        android:layout_width="279dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="60dp"
        android:backgroundTint="#FFC107"
        android:text="Adults"
        android:textColor="#05554E"
        android:textSize="25dp"
        android:textStyle="bold"
        app:rippleColor="#072525" />
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationchoose"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        app:lottie_autoPlay="true"
        app:lottie_colorFilter="#FFC107"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/ageanimationchoose"
        />


</LinearLayout>