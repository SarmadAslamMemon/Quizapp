<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#00ffffff"
    android:gravity="center"
    android:padding="20dp"
    android:orientation="vertical">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFC107"
            app:cardCornerRadius="10dp"
            android:elevation="15dp"
            android:layout_marginBottom="10dp"
            >




                    <TextView
                        android:id="@+id/sname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:text="Welcome Buddy "
                        android:textColor="#113C42"
                        android:textSize="25dp"
                        android:textStyle="bold"

                        />




        </androidx.cardview.widget.CardView>

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animationView"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="bottom"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/factsanimation" />

    </LinearLayout>



        <!--enter name card view-->

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#113C42"
        app:cardCornerRadius="20dp"
        android:elevation="15dp"
        android:layout_marginTop="-15dp"

     >






            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                >

<!--                 will work on backend of dialogue box get text and send it to homeframent intent-->

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/userNickName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                  android:gravity="center"
                    android:hint="Enter Your Name"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColorHint="@color/white"
                    android:layout_margin="10dp" />
                <Button

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:backgroundTint="#FFC107"
                android:id="@+id/btnUserNameSubmit"/>

        </LinearLayout>



    </androidx.cardview.widget.CardView>

</LinearLayout>

</LinearLayout>

